{{!-- views/auth/login.hbs --}}
<main class="d-flex align-items-center justify-content-center vh-100 bg-light">
  <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
    <div class="text-center mb-4">
      {{!-- Aquí podrías colocar tu logo --}}
      <h1 class="h4 fw-bold">Iniciar Sesión</h1>
    </div>

    {{!-- Mensajes de error --}}
    {{#if errorMessages}}
      <div class="alert alert-danger">
        <ul class="mb-0">
          {{#each errorMessages}}
            <li>{{this}}</li>
          {{/each}}
        </ul>
      </div>
    {{/if}}

    <form action="/login" method="POST" novalidate>
      <input type="hidden" name="_csrf" value="{{csrfToken}}">

      <div class="form-floating mb-3">
        <input
          type="email"
          class="form-control"
          id="floatingInput"
          name="email"
          placeholder="correo@ejemplo.com"
          required
        >
        <label for="floatingInput">Correo electrónico</label>
      </div>

      <div class="form-floating mb-4">
        <input
          type="password"
          class="form-control"
          id="floatingPassword"
          name="password"
          placeholder="Contraseña"
          required
        >
        <label for="floatingPassword">Contraseña</label>
      </div>

      <button class="w-100 btn btn-primary btn-lg mb-3" type="submit">
        Entrar
      </button>

      <div class="d-flex justify-content-between">
        <a href="/reset" class="btn btn-sm btn-outline-secondary">¿Olvidaste tu contraseña?</a>
        <a href="/signup" class="btn btn-sm btn-outline-info">Registro Cliente</a>
        <a href="/signupAsMerchant" class="btn btn-sm btn-outline-warning">Registro Comercio</a>
      </div>
    </form>
  </div>
</main>
