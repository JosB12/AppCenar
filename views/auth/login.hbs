<main class="form-signin">
  <form action="/login" method="POST">
    <!-- Campo oculto para el token CSRF -->
    <input type="hidden" name="_csrf" value="{{csrfToken}}" />

    <!-- Título de la vista -->
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <!-- Campo para el email con el estilo Bootstrap "form-floating" -->
    <div class="form-floating">
      <input
        type="email"
        class="form-control"
        name="email"
        id="floatingInput"
        placeholder="name@example.com"
        required
      />
      <label for="floatingInput">Email address</label>
    </div>

    <!-- Campo para la contraseña -->
    <div class="form-floating">
      <input
        type="password"
        class="form-control"
        name="password"
        id="floatingPassword"
        placeholder="Password"
        required
      />
      <label for="floatingPassword">Password</label>
    </div>

    <!-- Botón para enviar el formulario -->
    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>

    <!-- Enlace para resetear contraseña -->
    <a href="/reset" class="w-100 btn btn-lg btn-success margin-top-2">Reset</a>
    <!-- Botón para ir a la página de registro -->
    <a href="/signup" class="w-100 btn btn-lg btn-info margin-top-2">Registro usuario</a>
    <a href="/signupAsMerchant" class="w-100 btn btn-lg btn-warning margin-top-2">Registro como comercio</a>
  </form>
</main>
