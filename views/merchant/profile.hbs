<div class="container mt-5">
  <h2>Perfil del Comercio</h2>

  <form action="/merchant/profile" method="POST" enctype="multipart/form-data" class="mt-4">
   <input type="hidden" name="_csrf" value="{{csrfToken}}">

    <div class="form-group">
      <label for="merchantName">Nombre del comercio *</label>
      <input type="text" class="form-control" id="merchantName" name="merchantName" value="{{user.merchantName}}" required>
    </div>

    <div class="form-group">
      <label for="phone">Tel√©fono *</label>
      <input type="text" class="form-control" id="phone" name="phone" value="{{user.phone}}" required>
    </div>

    <div class="form-group">
      <label for="email">Correo *</label>
      <input type="email" class="form-control" id="email" name="email" value="{{user.email}}" required>
    </div>

    <div class="form-group">
      <label for="openingTime">Hora de apertura *</label>
      <input type="time" class="form-control" id="openingTime" name="openingTime" value="{{user.openingTime}}" required>
    </div>

    <div class="form-group">
      <label for="closingTime">Hora de cierre *</label>
      <input type="time" class="form-control" id="closingTime" name="closingTime" value="{{user.closingTime}}" required>
    </div>

    <div class="form-group">
      <label>Logo actual:</label>
      <div class="d-flex align-items-center mt-2 mb-3">
        {{#if user.merchantLogo}}
          <div class="border rounded p-2 bg-light shadow-sm">
            <img src="/images/{{user.merchantLogo}}" alt="Logo del comercio" width="160" height="160" style="object-fit: contain;">
          </div>
        {{else}}
          <p class="text-muted">No hay logo subido</p>
        {{/if}}
      </div>
    </div>

    <div class="form-group">
      <label for="merchantLogo">Actualizar Logo (opcional)</label>
      <input type="file" class="form-control-file" id="merchantLogo" name="merchantLogo">
    </div>

    <button type="submit" class="btn btn-success">Guardar cambios</button>
    <a href="/merchant/home" class="btn btn-secondary">Volver</a>
  </form>
</div>


