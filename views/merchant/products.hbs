<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Mantenimiento de Productos</h2>
    <a href="/merchant/products/create" class="btn btn-primary">
      Nuevo Producto
    </a>
  </div>

  {{#if products.length}}
    <table class="table table-bordered table-hover shadow-sm">
      <thead class="thead-dark">
        <tr>
          <th>Nombre</th>
          <th>Imagen</th>
          <th>Descripción</th>
          <th>Categoría</th>
          <th>Precio</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <td>{{this.name}}</td>
            <td>
              {{#if this.image}}
                <img src="/images/{{this.image}}" alt="Imagen de {{this.name}}" width="80">
              {{else}}
                <span class="text-muted">Sin imagen</span>
              {{/if}}
            </td>
            <td>{{this.description}}</td>
            <td>{{this.category.name}}</td>
            <td>$ {{this.price}}</td>
            <td>
              <a href="/merchant/products/edit/{{this.id}}" class="btn btn-sm btn-warning">Editar</a>
              <a href="/merchant/products/delete/{{this.id}}" class="btn btn-sm btn-danger">Eliminar</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <div class="alert alert-info text-center">
      No se han creado productos aún.
    </div>
  {{/if}}
</div>


