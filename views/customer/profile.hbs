<div class="container mt-5">
  <h2>Mi Perfil</h2>

  <form action="/customer/profile" method="POST" enctype="multipart/form-data" class="mt-4">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">

    <div class="form-group">
      <label for="firstName">Nombre </label>
      <input type="text" class="form-control" id="firstName" name="firstName" value="{{user.firstName}}" required>
    </div>

    <div class="form-group">
      <label for="lastName">Apellido </label>
      <input type="text" class="form-control" id="lastName" name="lastName" value="{{user.lastName}}" required>
    </div>

    <div class="form-group">
      <label for="phone">Tel√©fono </label>
      <input type="text" class="form-control" id="phone" name="phone" value="{{user.phone}}" required>
    </div>

    <div class="form-group">
      <label>Foto actual:</label>
      <div class="d-flex align-items-center mt-2 mb-3">
        {{#if user.profilePhoto}}
          <div class="border rounded p-2 bg-light shadow-sm">
            <img src="/images/{{user.profilePhoto}}" alt="Foto de perfil" width="160" height="160" style="object-fit: contain;">
          </div>
        {{else}}
          <p class="text-muted">No hay foto subida</p>
        {{/if}}
      </div>
    </div>

    <div class="form-group">
      <label for="profilePhoto">Actualizar Foto (opcional)</label>
      <input type="file" class="form-control-file" id="profilePhoto" name="profilePhoto">
    </div>

    <button type="submit" class="btn btn-success">Guardar cambios</button>
    <a href="/customer/home" class="btn btn-secondary">Volver</a>
  </form>
</div>
