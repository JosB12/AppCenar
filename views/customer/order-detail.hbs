<main class="container mt-5">
  <div class="text-center mb-4">
    <img src="/images/{{order.merchant.merchantLogo}}" alt="{{order.merchant.merchantName}}" style="height: 60px;">
    <h3 class="mt-3 font-weight-bold">{{order.merchant.merchantName}}</h3>

    <div class="d-flex justify-content-center align-items-center mt-2">
    <span class="badge px-4 py-2 text-dark font-weight-bold"
          style="font-size: 1rem;
                 background-color:
                   {{#if (eq order.status "pendiente")}}#ffc107
                   {{else if (eq order.status "EN PROCESO")}}#17a2b8
                   {{else}}#28a745{{/if}};
                 border-radius: 999px;">
      {{order.status}}
    </span>
  </div>

    <p class="text-muted mt-2" style="font-size: 0.95rem;">{{formattedDate}} {{formattedTime}}</p>
  </div>


  <hr>

  <h5>Tu pedido</h5>
  <ul class="list-group mb-3">
    {{#each order.order_products}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <div class="d-flex align-items-center">
        {{#if this.product.image}}
        <img src="/images/{{this.product.image}}" alt="{{this.name}}"
          style="width: 50px; height: 50px; object-fit: cover;" class="rounded mr-3">
        {{else}}
        <div class="bg-light d-flex align-items-center justify-content-center mr-3 rounded"
          style="width: 50px; height: 50px;">
          <i class="fas fa-box-open text-muted"></i>
        </div>
        {{/if}}
        <span>{{this.name}}</span>
      </div>
      <span>RD$ {{this.price}}</span>
    </li>
    {{/each}}
    <li class="list-group-item d-flex justify-content-between font-weight-bold">
      <span>Total</span>
      <span>RD$ {{order.total}}</span>
    </li>
  </ul>

  <a href="/customer/orders" class="btn btn-outline-secondary btn-block">‚Üê Volver al listado</a>
</main>