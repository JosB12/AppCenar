<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="font-weight-bold">Mis direcciones</h2>
    <a href="/customer/addresses/create" class="btn btn-danger">+ Dirección</a>
  </div>

  {{#if addresses.length}}
    <div class="list-group">
      {{#each addresses}}
        <div class="list-group-item mb-2 shadow-sm rounded">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h5 class="mb-1 font-weight-bold"><i class="fas fa-map-marker-alt mr-2 text-danger"></i>{{this.name}}</h5>
              <p class="mb-1 text-muted">{{this.description}}</p>
            </div>
            <div>
              <a href="/customer/addresses/edit/{{this.id}}" class="btn btn-sm btn-danger mr-2">Editar</a>
              <a href="/customer/addresses/delete/{{this.id}}" class="btn btn-sm btn-danger">Eliminar</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="alert alert-info text-center">
      No tienes direcciones registradas aún.
    </div>
  {{/if}}
</div>
