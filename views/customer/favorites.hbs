<main class="container mt-5">
  <h3 class="mb-4">Favoritos</h3>
  <p class="text-muted">Pide a donde más te gusta</p>

  {{#if favorites.length}}
    <div class="list-group">
      {{#each favorites}}
        <div class="list-group-item d-flex align-items-center justify-content-between py-3">
          <div class="d-flex align-items-center">
            {{#if this.merchant.merchantLogo}}
              <img
                src="/images/{{this.merchant.merchantLogo}}"
                alt="{{this.merchant.merchantName}}"
                class="rounded mr-3"
                style="width: 45px; height: 45px; object-fit: cover;"
              >
            {{else}}
              <div class="rounded bg-light d-flex align-items-center justify-content-center mr-3"
                   style="width: 45px; height: 45px;">No Logo</div>
            {{/if}}

            <strong class="ml-2">{{this.merchant.merchantName}}</strong>
          </div>

          <form method="POST" action="/customer/favorites/{{this.merchant.id}}/remove" class="mb-0">
            <input type="hidden" name="_csrf" value="{{../csrfToken}}">
            <button type="submit" class="btn btn-danger btn-sm px-3">Remover</button>
          </form>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="alert alert-info text-center mt-4">
      No tienes comercios marcados como favoritos aún.
    </div>
  {{/if}}

  <div class="mt-4">
    <a href="/customer/home" class="btn btn-outline-secondary">← Volver al inicio</a>
  </div>
</main>
